<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Booking.booking.Change_Password">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/tv_back"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/backbtn"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="34sp" />
                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="@font/simple_beauty"
                    android:text="Change Password"
                    android:textColor="@color/orange"
                    android:layout_marginRight="@dimen/_18sdp"
                    android:textSize="34sp" />


            </LinearLayout>



            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et_usernameLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:hint="Current Password"
                app:hintTextColor="@color/black"
                app:prefixTextColor="@color/black"
                app:counterTextColor="@color/black"
                app:helperTextEnabled="true"
                app:counterEnabled="true"
                app:counterMaxLength="15"
                android:textColorHint="@color/black"
                app:endIconTint="@color/black"
                app:helperTextTextColor="@color/red"
                android:maxLength="15"
                android:inputType="textPassword"
                app:endIconMode="password_toggle"
                app:startIconDrawable="@drawable/password"
                app:startIconTint="@color/orange">

                <com.google.android.material.textfield.TextInputEditText

                    android:paddingEnd="40dp"
                    android:id="@+id/et_currentPassword"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/simple_beauty"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:background="@drawable/roundandround"
                    android:paddingLeft="8sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et_passwordLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Current Password"
                app:hintTextColor="@color/black"
                app:prefixTextColor="@color/black"
                app:counterTextColor="@color/black"
                app:helperTextEnabled="true"
                app:counterEnabled="true"
                app:counterMaxLength="15"
                android:textColorHint="@color/black"
                app:endIconTint="@color/black"
                app:helperTextTextColor="@color/red"
                android:maxLength="15"
                android:inputType="textPassword"
                app:endIconMode="password_toggle"
                app:startIconDrawable="@drawable/password"
                app:startIconTint="@color/orange" >

                <com.google.android.material.textfield.TextInputEditText

                    android:paddingEnd="40dp"
                    android:id="@+id/et_newPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/simple_beauty"
                    android:textColor="@color/black"
                    android:background="@drawable/roundandround"
                    android:inputType="textPassword" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et_passwordLayout1"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm New Password"
                app:hintTextColor="@color/black"
                app:prefixTextColor="@color/black"
                app:counterTextColor="@color/black"
                app:helperTextEnabled="true"
                app:counterEnabled="true"
                app:counterMaxLength="15"
                android:textColorHint="@color/black"
                app:endIconTint="@color/black"
                app:helperTextTextColor="@color/red"
                android:maxLength="15"
                android:inputType="textPassword"
                android:textColor="@color/black"
                app:endIconMode="password_toggle"
                app:startIconDrawable="@drawable/password"
                app:startIconTint="@color/orange">

                <com.google.android.material.textfield.TextInputEditText

                    android:paddingEnd="40dp"
                    android:id="@+id/et_confirmNewPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/simple_beauty"
                    android:background="@drawable/roundandround"
                    android:inputType="textPassword" />

            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/btn_changePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginTop="48dp"
                android:background="@drawable/roundandround"
                android:text="Change Password"
                app:backgroundTint="@color/orange"
                android:gravity="center"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/simple_beauty"
                android:layout_gravity="center" />


        </LinearLayout>

    </ScrollView>



</LinearLayout>