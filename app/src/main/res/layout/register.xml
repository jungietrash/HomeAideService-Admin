<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".Booking.booking.register_page">

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:fontFamily="@font/simple_beauty"
                android:text="BE PART OF HOMEAIDE FAMILY"
                android:textColor="@color/orange"
                android:textSize="@dimen/_28sdp" />
            <TextView
                android:id="@+id/textView44"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:fontFamily="@font/simple_beauty"
                android:text="REGISTER NOW!"
                android:textColor="@color/black"
                android:textSize="@dimen/_20sdp" />

            <FrameLayout
                android:id="@+id/layoutImage"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/imageProfile"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="119dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/background"
                    android:scaleType="centerCrop"
                    app:riv_oval="true" />

                <TextView
                    android:id="@+id/textAddImage"
                    android:layout_width="104dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textStyle="italic"
                    android:textColor="@color/black"
                    android:text="Add image"
                    android:textAlignment="center" />

            </FrameLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fnameLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:counterEnabled="true"
                app:helperTextTextColor="@color/orange"
                app:counterMaxLength="30"
                android:textColorHint="#5D5D5D"
                app:counterTextColor="@color/orange"
                app:endIconMode="clear_text"
                app:helperText="Required*"
                app:endIconTint="@color/black"

                app:startIconTint="@color/homeaidecolor"
                app:startIconDrawable="@drawable/person">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_firstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="First Name"
                    android:background="@drawable/roundandround"
                    android:fontFamily="@font/simple_beauty"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    android:maxLength="30"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fnameLayout5"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:counterEnabled="true"
                app:counterMaxLength="30"
                app:helperText="Required*"
                app:startIconTint="@color/homeaidecolor"
                app:endIconMode="clear_text"
                app:helperTextTextColor="@color/orange"
                app:counterTextColor="@color/orange"
                app:endIconTint="@color/black"

                android:textColorHint="#5D5D5D"
                app:startIconDrawable="@drawable/person">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_lastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Last Name"
                    android:fontFamily="@font/simple_beauty"
                    android:maxLength="30"
                    android:background="@drawable/roundandround"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fnameLayout1"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:counterEnabled="true"
                app:counterMaxLength="30"
                app:endIconMode="clear_text"
                android:textColorHint="#5D5D5D"
                app:helperText="Required*"
                app:helperTextTextColor="@color/orange"
                app:counterTextColor="@color/orange"
                app:startIconTint="@color/homeaidecolor"
                app:endIconTint="@color/black"

                app:startIconDrawable="@drawable/mail">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:hint="Email"

                    android:maxLength="30"
                    android:fontFamily="@font/simple_beauty"

                    android:background="@drawable/roundandround"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />


            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/red"
                android:layout_marginLeft="@dimen/_5sdp"
                android:fontFamily="@font/simple_beauty"

                android:text="Note*"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/simple_beauty"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="Please Enter Legit Email Address for verification! Thank you"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fnameLayout2"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:counterEnabled="true"
                app:counterMaxLength="10"
                app:counterTextColor="@color/orange"
                app:endIconMode="clear_text"
                app:helperText="Required*"
                app:startIconTint="@color/homeaidecolor"
                app:helperTextTextColor="@color/orange"
                app:prefixText="+63"
                app:prefixTextColor="@color/black"
                app:endIconTint="@color/black"
                android:textColorHint="#5D5D5D"
                app:startIconDrawable="@drawable/chatty">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_contactNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Contact Number"
                    android:maxLength="10"
                    android:paddingLeft="8sp"
                    android:background="@drawable/roundandround"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    android:inputType="phone" />


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fnameLayout3"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:inputType="textPassword"
                app:counterEnabled="true"
                app:counterMaxLength="15"
                app:endIconMode="password_toggle"
                app:helperText="Required*"
                app:startIconTint="@color/homeaidecolor"
                app:helperTextTextColor="@color/orange"
                app:counterTextColor="@color/orange"
                app:endIconTint="@color/black"

                android:textColorHint="#5D5D5D"
                app:startIconDrawable="@drawable/password">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_password_signup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:maxLength="15"
                    android:inputType="textPassword"
                    android:fontFamily="@font/simple_beauty"
                    android:background="@drawable/roundandround"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp" />


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fnameLayout4"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:inputType="textPassword"
                app:counterEnabled="true"
                app:counterMaxLength="15"
                app:endIconMode="password_toggle"
                app:helperText="Required*"
                app:startIconTint="@color/homeaidecolor"
                android:textColorHint="#5D5D5D"
                app:helperTextTextColor="@color/orange"
                app:counterTextColor="@color/orange"
                app:endIconTint="@color/black"

                app:startIconDrawable="@drawable/password">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_confirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Confirm Password"
                    android:maxLength="15"
                    android:fontFamily="@font/simple_beauty"
                    android:inputType="textPassword"
                    android:background="@drawable/roundandround"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp" />


            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/checkBox_terms"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/simple_beauty"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:textColor="@color/black"
                    android:text="I agree with" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Terms and Conditions"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/simple_beauty"
                    android:visibility="visible" />

            </LinearLayout>


            <Button
                android:id="@+id/btn_signUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="30dp"
                android:backgroundTint="#3592BA"
                android:elevation="10dp"
                android:fontFamily="@font/simple_beauty"
                android:text="Sign Up"
                android:textSize="@dimen/_18sdp"
                android:background="@drawable/roundandround"
                android:layout_marginBottom="16dp" />

            <ProgressBar
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_gravity="center"
                android:id="@+id/progressBar"
                android:visibility="invisible"/>


        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_ForgotPassword3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Already have an account?"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_signIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Sign In"
            android:textColor="#BA354D"
            android:textSize="16sp" />


    </LinearLayout>

</LinearLayout>